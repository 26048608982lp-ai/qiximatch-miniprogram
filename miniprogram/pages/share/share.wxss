/* 分享页面样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
  overflow: hidden;
  opacity: 0;
  transform: translateY(40rpx);
  transition: all 0.6s ease;
}

.container.fade-in {
  opacity: 1;
  transform: translateY(0);
}

/* 背景装饰 */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 1;
}

.heart {
  position: absolute;
  font-size: 40rpx;
  opacity: 0.6;
  animation: float 6s ease-in-out infinite;
}

.heart-1 {
  top: 10%;
  left: 10%;
  animation-delay: 0s;
}

.heart-2 {
  top: 20%;
  right: 15%;
  animation-delay: 2s;
}

.heart-3 {
  bottom: 30%;
  left: 20%;
  animation-delay: 4s;
}

.heart-animate {
  animation: heartbeat 1s ease-in-out;
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-20rpx); }
}

@keyframes heartbeat {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.2); }
}

/* 主要内容 */
.main-content {
  position: relative;
  z-index: 2;
  padding: 100rpx 32rpx 40rpx 32rpx;
  min-height: 100vh;
}

/* 头部信息 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 60rpx;
}

.title-section {
  flex: 1;
  margin-right: 20rpx;
}

.main-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
}

.header-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

/* 分享卡片 */
.share-card {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 60rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.card-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.card-icon {
  font-size: 40rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
}

.share-link-container {
  background: rgba(0, 0, 0, 0.2);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.share-link {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  word-break: break-all;
  line-height: 1.4;
}

.share-actions {
  display: flex;
  justify-content: center;
}

/* 分享方式 */
.share-methods {
  margin-bottom: 60rpx;
  opacity: 0;
  transform: translateY(40rpx);
  transition: all 0.6s ease 0.3s;
}

.share-methods.slide-up {
  opacity: 1;
  transform: translateY(0);
}

.section-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 32rpx;
  text-align: center;
}

.methods-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.method-card {
  background: rgba(255, 255, 255, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  transition: all 0.3s ease;
  cursor: pointer;
  backdrop-filter: blur(5px);
}

.method-card:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.1);
}

.method-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.method-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 4rpx;
}

.method-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  text-align: center;
  line-height: 1.3;
}

/* 快速操作 */
.quick-actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 60rpx;
}

/* 提示信息 */
.tips-section {
  margin-top: auto;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  backdrop-filter: blur(5px);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.tip-icon {
  font-size: 32rpx;
  line-height: 1;
  margin-top: 4rpx;
}

.tip-text {
  flex: 1;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
}

/* 按钮样式 */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 28rpx 32rpx;
  border-radius: 50rpx;
  border: none;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.btn-primary {
  background: linear-gradient(135deg, #ff6b9d 0%, #c44569 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 157, 0.4);
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 157, 0.4);
}

.btn-primary:disabled {
  background: rgba(255, 255, 255, 0.2);
  color: rgba(255, 255, 255, 0.5);
  box-shadow: none;
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.1);
  color: #ffffff;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.btn-secondary:active {
  background: rgba(255, 255, 255, 0.2);
}

.btn-outline {
  background: transparent;
  color: #ffffff;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
}

.btn-outline:active {
  background: rgba(255, 255, 255, 0.1);
}

.btn-large {
  height: 100rpx;
  font-size: 36rpx;
}

.btn-icon {
  font-size: 24rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .main-content {
    padding: 80rpx 20rpx 40rpx 20rpx;
  }
  
  .header {
    flex-direction: column;
    gap: 20rpx;
  }
  
  .main-title {
    font-size: 40rpx;
  }
  
  .subtitle {
    font-size: 26rpx;
  }
  
  .share-card {
    padding: 32rpx;
  }
  
  .methods-grid {
    grid-template-columns: 1fr;
  }
  
  .quick-actions {
    margin-bottom: 40rpx;
  }
  
  .tip-item {
    padding: 20rpx;
  }
  
  .tip-text {
    font-size: 24rpx;
  }
}

/* 动画效果 */
@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}