/* 兴趣选择页面样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0 32rpx 120rpx 32rpx;
  opacity: 0;
  transform: translateY(40rpx);
  transition: all 0.6s ease;
}

.container.fade-in {
  opacity: 1;
  transform: translateY(0);
}

/* 头部信息 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 40rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
  margin-bottom: 40rpx;
}

.user-info {
  flex: 1;
  margin-right: 20rpx;
}

.user-name {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.user-desc {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
}

.header-actions {
  flex-shrink: 0;
}

/* 切换按钮 */
.toggle-section {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  backdrop-filter: blur(10px);
}

.toggle-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 20rpx;
  background: transparent;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
  color: rgba(255, 255, 255, 0.7);
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.toggle-btn.active {
  background: rgba(255, 107, 157, 0.3);
  border-color: #ff6b9d;
  color: #ffffff;
}

.toggle-icon {
  font-size: 24rpx;
}

/* 星空图模式 */
.constellation-section {
  margin-bottom: 40rpx;
}

/* 列表模式 */
.list-section {
  margin-bottom: 40rpx;
}

/* 分类标签 */
.category-tabs {
  display: flex;
  gap: 16rpx;
  margin-bottom: 40rpx;
  flex-wrap: wrap;
}

.category-tab {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 50rpx;
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.category-tab.active {
  background: #ff6b9d;
  border-color: #ff6b9d;
  color: #ffffff;
  transform: scale(1.05);
}

.category-tab:active {
  transform: scale(0.95);
}

.category-icon {
  font-size: 24rpx;
}

.category-name {
  font-weight: 500;
}

/* 兴趣网格 */
.interests-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.interest-item {
  background: rgba(255, 255, 255, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 24rpx;
  transition: all 0.3s ease;
  cursor: pointer;
  backdrop-filter: blur(10px);
}

.interest-item.selected {
  background: rgba(255, 107, 157, 0.3);
  border-color: #ff6b9d;
  transform: scale(1.02);
}

.interest-item:active {
  transform: scale(0.98);
}

.interest-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.interest-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.interest-icon {
  font-size: 32rpx;
}

.interest-name {
  flex: 1;
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 500;
}

.selected-icon {
  font-size: 24rpx;
  color: #4caf50;
}

/* 重要程度选择 */
.importance-section {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
}

.importance-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.importance-stars {
  display: flex;
  gap: 8rpx;
}

.star {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.3);
  transition: all 0.2s ease;
  cursor: pointer;
}

.star.active {
  color: #ffc107;
  transform: scale(1.1);
}

.star:active {
  transform: scale(0.9);
}

.importance-value {
  font-size: 24rpx;
  color: #ffc107;
  font-weight: 600;
  text-align: center;
}

/* 已选择的兴趣预览 */
.selected-preview {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  padding: 24rpx;
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  margin-bottom: 40rpx;
}

.preview-header {
  margin-bottom: 20rpx;
}

.preview-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
}

.selected-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.selected-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 16rpx;
  background: rgba(255, 107, 157, 0.2);
  border-radius: 50rpx;
  border: 1rpx solid rgba(255, 107, 157, 0.3);
}

.selected-icon {
  font-size: 24rpx;
}

.selected-name {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 500;
}

.selected-importance {
  font-size: 20rpx;
  color: #ffc107;
  background: rgba(255, 193, 7, 0.2);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  padding: 40rpx;
  color: rgba(255, 255, 255, 0.5);
}

.empty-icon {
  font-size: 48rpx;
}

.empty-text {
  font-size: 28rpx;
}

/* 底部操作按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 32rpx;
  background: linear-gradient(to top, rgba(102, 126, 234, 0.9), transparent);
  backdrop-filter: blur(10px);
}

.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 28rpx 32rpx;
  border-radius: 50rpx;
  border: none;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.btn-primary {
  background: linear-gradient(135deg, #ff6b9d 0%, #c44569 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 157, 0.4);
}

.btn-primary:disabled {
  background: rgba(255, 255, 255, 0.2);
  color: rgba(255, 255, 255, 0.5);
  box-shadow: none;
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.1);
  color: #ffffff;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.btn-secondary:active {
  background: rgba(255, 255, 255, 0.2);
}

.btn-large {
  height: 100rpx;
}

.btn.loading {
  pointer-events: none;
}

.btn-icon {
  font-size: 24rpx;
}

.btn-text {
  flex: 1;
  text-align: center;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 0 20rpx 100rpx 20rpx;
  }
  
  .header {
    flex-direction: column;
    gap: 20rpx;
  }
  
  .user-name {
    font-size: 40rpx;
  }
  
  .user-desc {
    font-size: 26rpx;
  }
  
  .interests-grid {
    grid-template-columns: 1fr;
  }
  
  .category-tabs {
    justify-content: center;
  }
  
  .bottom-actions {
    padding: 20rpx;
  }
}