/* 全局样式变量 */
page {
  /* 主题颜色 */
  --qixi-pink: #ff6b9d;
  --qixi-purple: #c44569;
  --qixi-blue: #4ecdc4;
  --qixi-gold: #ffe66d;
  
  /* 背景颜色 */
  --bg-primary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --bg-secondary: rgba(255, 255, 255, 0.1);
  --bg-card: rgba(255, 255, 255, 0.1);
  
  /* 文字颜色 */
  --text-primary: #ffffff;
  --text-secondary: rgba(255, 255, 255, 0.8);
  --text-tertiary: rgba(255, 255, 255, 0.6);
  
  /* 边框颜色 */
  --border-primary: rgba(255, 255, 255, 0.3);
  --border-secondary: rgba(255, 255, 255, 0.2);
  
  /* 阴影 */
  --shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
  --shadow-sm: 0 4px 16px 0 rgba(31, 38, 135, 0.2);
}

/* 全局样式 */
page {
  background: var(--bg-primary);
  color: var(--text-primary);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  line-height: 1.6;
  min-height: 100vh;
}

/* 通用容器 */
.container {
  padding: 20rpx;
  max-width: 100%;
  margin: 0 auto;
}

/* 卡片样式 */
.card {
  background: var(--bg-card);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  padding: 40rpx;
  margin: 20rpx 0;
  box-shadow: var(--shadow);
  border: 1px solid var(--border-primary);
}

/* 按钮样式 */
.btn {
  background: linear-gradient(135deg, var(--qixi-pink) 0%, var(--qixi-purple) 100%);
  color: var(--text-primary);
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  transition: all 0.3s ease;
  box-shadow: var(--shadow-sm);
}

.btn:hover {
  transform: translateY(-2rpx);
  box-shadow: var(--shadow);
}

.btn:active {
  transform: translateY(0);
}

.btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.btn-secondary {
  background: var(--bg-secondary);
  border: 1px solid var(--border-primary);
}

.btn-outline {
  background: transparent;
  border: 1px solid var(--qixi-pink);
  color: var(--qixi-pink);
}

/* 输入框样式 */
.input {
  background: var(--bg-secondary);
  border: 1px solid var(--border-primary);
  border-radius: 16rpx;
  padding: 24rpx;
  color: var(--text-primary);
  font-size: 32rpx;
  margin: 16rpx 0;
  backdrop-filter: blur(5px);
}

.input::placeholder {
  color: var(--text-tertiary);
}

/* 文字样式 */
.text-title {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 20rpx;
}

.text-subtitle {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
}

.text-body {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.6;
}

.text-small {
  font-size: 24rpx;
  color: var(--text-tertiary);
}

/* 网格布局 */
.grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.grid-3 {
  grid-template-columns: repeat(3, 1fr);
}

.grid-4 {
  grid-template-columns: repeat(4, 1fr);
}

/* Flex布局 */
.flex {
  display: flex;
}

.flex-col {
  flex-direction: column;
}

.flex-center {
  justify-content: center;
  align-items: center;
}

.flex-between {
  justify-content: space-between;
  align-items: center;
}

.flex-wrap {
  flex-wrap: wrap;
}

/* 间距 */
.mt-10 { margin-top: 20rpx; }
.mt-20 { margin-top: 40rpx; }
.mt-30 { margin-top: 60rpx; }
.mb-10 { margin-bottom: 20rpx; }
.mb-20 { margin-bottom: 40rpx; }
.mb-30 { margin-bottom: 60rpx; }
.p-10 { padding: 20rpx; }
.p-20 { padding: 40rpx; }
.p-30 { padding: 60rpx; }

/* 圆角 */
.rounded-sm { border-radius: 10rpx; }
.rounded { border-radius: 20rpx; }
.rounded-lg { border-radius: 30rpx; }
.rounded-full { border-radius: 50%; }

/* 阴影 */
.shadow-sm { box-shadow: var(--shadow-sm); }
.shadow { box-shadow: var(--shadow); }

/* 动画 */
.fade-in {
  animation: fadeIn 0.5s ease-in;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.slide-up {
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}