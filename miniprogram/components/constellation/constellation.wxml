<!-- 星空图组件模板 -->
<view class="constellation-container">
  <!-- 画布 -->
  <canvas 
    id="constellation-canvas"
    class="constellation-canvas"
    canvas-id="constellation-canvas"
    bindtap="handleCanvasClick"
    bindtouchmove="handleCanvasTouchMove"
    bindtouchend="handleCanvasTouchEnd"
    style="width: {{canvasWidth}}rpx; height: {{canvasHeight}}rpx;"
  ></canvas>
  
  <!-- 提示信息 -->
  <view class="tips-container">
    <view class="tip-card">
      <text class="tip-icon">⭐</text>
      <text class="tip-text">点击星星选择兴趣</text>
      <text class="tip-count">已选择: {{selectedInterests.length}}</text>
    </view>
  </view>
  
  <!-- 悬停信息 -->
  <view wx:if="{{hoveredInterest}}" class="hover-info">
    <text class="hover-name">{{hoveredInterest.name}}</text>
    <text class="hover-icon">{{hoveredInterest.icon}}</text>
  </view>
</view>