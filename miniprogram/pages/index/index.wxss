/* 首页样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 1;
}

.heart {
  position: absolute;
  font-size: 40rpx;
  opacity: 0.6;
  animation: float 6s ease-in-out infinite;
}

.heart-1 {
  top: 10%;
  left: 10%;
  animation-delay: 0s;
}

.heart-2 {
  top: 20%;
  right: 15%;
  animation-delay: 2s;
}

.heart-3 {
  bottom: 30%;
  left: 20%;
  animation-delay: 4s;
}

.heart-animate {
  animation: heartbeat 1s ease-in-out;
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-20rpx); }
}

@keyframes heartbeat {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.2); }
}

/* 主要内容 */
.main-content {
  position: relative;
  z-index: 2;
  padding: 100rpx 40rpx;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  opacity: 0;
  transform: translateY(40rpx);
  transition: all 0.6s ease;
}

.main-content.fade-in {
  opacity: 1;
  transform: translateY(0);
}

/* 标题区域 */
.header {
  text-align: center;
  margin-bottom: 80rpx;
}

.title-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.main-title {
  font-size: 80rpx;
  font-weight: bold;
  color: #ffffff;
  text-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
  margin-bottom: 20rpx;
  letter-spacing: 4rpx;
}

.subtitle {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 300;
}

/* 输入区域 */
.input-section {
  margin-bottom: 60rpx;
}

.input-group {
  margin-bottom: 40rpx;
}

.input-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.label-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.label-text {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

.input-field {
  width: 100%;
  padding: 28rpx 32rpx;
  background: rgba(255, 255, 255, 0.15);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 20rpx;
  color: #ffffff;
  font-size: 32rpx;
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
}

.input-field:focus {
  background: rgba(255, 255, 255, 0.2);
  border-color: rgba(255, 255, 255, 0.5);
}

.input-field::placeholder {
  color: rgba(255, 255, 255, 0.6);
}

/* 当前会话状态 */
.session-status {
  margin-bottom: 60rpx;
}

.status-card {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  padding: 32rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.status-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.status-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-badge.waiting {
  background: rgba(255, 193, 7, 0.3);
  color: #ffc107;
}

.status-badge.completed {
  background: rgba(76, 175, 80, 0.3);
  color: #4caf50;
}

.status-info {
  display: flex;
  flex-direction: column;
  margin-bottom: 24rpx;
}

.status-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 8rpx;
}

.status-time {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

.status-actions {
  display: flex;
  gap: 16rpx;
}

/* 操作按钮 */
.action-section {
  margin-bottom: 80rpx;
}

.btn {
  width: 100%;
  padding: 32rpx;
  border-radius: 50rpx;
  border: none;
  font-size: 36rpx;
  font-weight: 600;
  text-align: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.btn-primary {
  background: linear-gradient(135deg, #ff6b9d 0%, #c44569 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 157, 0.4);
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 157, 0.4);
}

.btn-primary:disabled {
  background: rgba(255, 255, 255, 0.2);
  color: rgba(255, 255, 255, 0.5);
  box-shadow: none;
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.1);
  color: #ffffff;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.btn-secondary:active {
  background: rgba(255, 255, 255, 0.2);
}

.btn-large {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn.loading {
  pointer-events: none;
}

.btn-text {
  flex: 1;
  text-align: center;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 功能介绍 */
.features-section {
  margin-top: auto;
}

.feature-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 40rpx;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 20rpx;
  backdrop-filter: blur(5px);
  transition: all 0.3s ease;
}

.feature-item:active {
  background: rgba(255, 255, 255, 0.1);
  transform: translateY(2rpx);
}

.feature-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
  line-height: 1;
}

.feature-content {
  flex: 1;
}

.feature-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.feature-desc {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.4;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .main-content {
    padding: 80rpx 32rpx;
  }
  
  .main-title {
    font-size: 72rpx;
  }
  
  .subtitle {
    font-size: 28rpx;
  }
  
  .features-section {
    margin-top: 60rpx;
  }
}