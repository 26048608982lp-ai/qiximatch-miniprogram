/* 全局样式变量 */
page {
  /* 主题颜色 */
  --qixi-pink: #ff6b9d;
  --qixi-purple: #c44569;
  --qixi-blue: #4ecdc4;
  --qixi-gold: #ffe66d;
  
  /* 背景颜色 */
  --bg-primary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --bg-secondary: rgba(255, 255, 255, 0.1);
  --bg-card: rgba(255, 255, 255, 0.1);
  
  /* 文字颜色 */
  --text-primary: #ffffff;
  --text-secondary: rgba(255, 255, 255, 0.8);
  --text-tertiary: rgba(255, 255, 255, 0.6);
  
  /* 边框颜色 */
  --border-primary: rgba(255, 255, 255, 0.3);
  --border-secondary: rgba(255, 255, 255, 0.2);
  
  /* 阴影 */
  --shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
  --shadow-sm: 0 4px 16px 0 rgba(31, 38, 135, 0.2);
}

/* 全局样式 */
page {
  background: var(--bg-primary);
  color: var(--text-primary);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  line-height: 1.6;
  min-height: 100vh;
}

/* 通用容器 */
.container {
  padding: 20rpx;
  max-width: 100%;
  margin: 0 auto;
  box-sizing: border-box;
}

/* 响应式容器 */
.container-fluid {
  width: 100%;
  padding: 0;
  margin: 0;
}

.container-sm {
  max-width: 750rpx;
  margin: 0 auto;
}

.container-md {
  max-width: 900rpx;
  margin: 0 auto;
}

/* 卡片样式 */
.card {
  background: var(--bg-card);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  padding: 40rpx;
  margin: 20rpx 0;
  box-shadow: var(--shadow);
  border: 1px solid var(--border-primary);
}

/* 按钮样式 */
.btn {
  background: linear-gradient(135deg, var(--qixi-pink) 0%, var(--qixi-purple) 100%);
  color: var(--text-primary);
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  transition: all 0.3s ease;
  box-shadow: var(--shadow-sm);
}

.btn:hover {
  transform: translateY(-2rpx);
  box-shadow: var(--shadow);
}

.btn:active {
  transform: translateY(0);
}

.btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.btn-secondary {
  background: var(--bg-secondary);
  border: 1px solid var(--border-primary);
}

.btn-outline {
  background: transparent;
  border: 1px solid var(--qixi-pink);
  color: var(--qixi-pink);
}

/* 输入框样式 */
.input {
  background: var(--bg-secondary);
  border: 1px solid var(--border-primary);
  border-radius: 16rpx;
  padding: 24rpx;
  color: var(--text-primary);
  font-size: 32rpx;
  margin: 16rpx 0;
  backdrop-filter: blur(5px);
}

.input::placeholder {
  color: var(--text-tertiary);
}

/* 文字样式 */
.text-title {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 20rpx;
}

.text-subtitle {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
}

.text-body {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.6;
}

.text-small {
  font-size: 24rpx;
  color: var(--text-tertiary);
}

/* 网格布局 */
.grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.grid-3 {
  grid-template-columns: repeat(3, 1fr);
}

.grid-4 {
  grid-template-columns: repeat(4, 1fr);
}

/* Flex布局 */
.flex {
  display: flex;
}

.flex-col {
  flex-direction: column;
}

.flex-center {
  justify-content: center;
  align-items: center;
}

.flex-between {
  justify-content: space-between;
  align-items: center;
}

.flex-wrap {
  flex-wrap: wrap;
}

/* 间距 */
.mt-10 { margin-top: 20rpx; }
.mt-20 { margin-top: 40rpx; }
.mt-30 { margin-top: 60rpx; }
.mb-10 { margin-bottom: 20rpx; }
.mb-20 { margin-bottom: 40rpx; }
.mb-30 { margin-bottom: 60rpx; }
.p-10 { padding: 20rpx; }
.p-20 { padding: 40rpx; }
.p-30 { padding: 60rpx; }

/* 圆角 */
.rounded-sm { border-radius: 10rpx; }
.rounded { border-radius: 20rpx; }
.rounded-lg { border-radius: 30rpx; }
.rounded-full { border-radius: 50%; }

/* 阴影 */
.shadow-sm { box-shadow: var(--shadow-sm); }
.shadow { box-shadow: var(--shadow); }

/* 动画 */
.fade-in {
  animation: fadeIn 0.5s ease-in;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.slide-up {
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

/* 响应式设计改进 */
@media (max-width: 750rpx) {
  /* 更小屏幕的间距调整 */
  .container {
    padding: 16rpx;
  }
  
  .card {
    padding: 30rpx;
    margin: 16rpx 0;
    border-radius: 16rpx;
  }
  
  .btn {
    padding: 20rpx 40rpx;
    font-size: 30rpx;
    border-radius: 40rpx;
  }
  
  .input {
    padding: 20rpx;
    font-size: 30rpx;
  }
  
  /* 文字大小调整 */
  .text-title {
    font-size: 42rpx;
  }
  
  .text-subtitle {
    font-size: 32rpx;
  }
  
  .text-body {
    font-size: 26rpx;
  }
  
  /* 网格布局调整 */
  .grid {
    grid-template-columns: 1fr;
    gap: 16rpx;
  }
  
  .grid-3 {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .grid-4 {
    grid-template-columns: repeat(2, 1fr);
  }
  
  /* 间距调整 */
  .mt-10 { margin-top: 16rpx; }
  .mt-20 { margin-top: 32rpx; }
  .mt-30 { margin-top: 48rpx; }
  .mb-10 { margin-bottom: 16rpx; }
  .mb-20 { margin-bottom: 32rpx; }
  .mb-30 { margin-bottom: 48rpx; }
  .p-10 { padding: 16rpx; }
  .p-20 { padding: 32rpx; }
  .p-30 { padding: 48rpx; }
}

@media (max-width: 600rpx) {
  /* 超小屏幕调整 */
  .container {
    padding: 12rpx;
  }
  
  .card {
    padding: 24rpx;
    margin: 12rpx 0;
  }
  
  .btn {
    padding: 18rpx 36rpx;
    font-size: 28rpx;
  }
  
  .input {
    padding: 18rpx;
    font-size: 28rpx;
  }
  
  /* 文字进一步缩小 */
  .text-title {
    font-size: 38rpx;
  }
  
  .text-subtitle {
    font-size: 30rpx;
  }
  
  .text-body {
    font-size: 24rpx;
  }
  
  .text-small {
    font-size: 22rpx;
  }
  
  /* 网格改为单列 */
  .grid, .grid-3, .grid-4 {
    grid-template-columns: 1fr;
    gap: 12rpx;
  }
  
  /* Flex布局调整 */
  .flex-col-mobile {
    flex-direction: column;
  }
  
  .flex-center-mobile {
    justify-content: center;
    align-items: center;
  }
}

@media (min-width: 900rpx) {
  /* 大屏幕增强 */
  .container-md {
    max-width: 1200rpx;
  }
  
  .grid-4 {
    grid-template-columns: repeat(4, 1fr);
  }
  
  .card {
    padding: 48rpx;
  }
}

/* 横屏优化 */
@media (orientation: landscape) and (max-height: 600rpx) {
  .container {
    padding: 12rpx 20rpx;
  }
  
  .card {
    margin: 12rpx 0;
  }
  
  .text-title {
    font-size: 36rpx;
  }
  
  .text-subtitle {
    font-size: 28rpx;
  }
}

/* 触摸优化 */
.touch-optimized {
  min-height: 88rpx;
  min-width: 88rpx;
}

.touch-target {
  padding: 24rpx;
  margin: -8rpx;
}

/* 安全区域适配 */
.safe-area-inset-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.safe-area-inset-top {
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
}

.safe-area-inset-left {
  padding-left: constant(safe-area-inset-left);
  padding-left: env(safe-area-inset-left);
}

.safe-area-inset-right {
  padding-right: constant(safe-area-inset-right);
  padding-right: env(safe-area-inset-right);
}

/* 暗色模式支持 */
@media (prefers-color-scheme: dark) {
  :root {
    --bg-primary: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
    --bg-secondary: rgba(255, 255, 255, 0.05);
    --bg-card: rgba(255, 255, 255, 0.05);
    --text-primary: #ecf0f1;
    --text-secondary: rgba(236, 240, 241, 0.8);
    --text-tertiary: rgba(236, 240, 241, 0.6);
    --border-primary: rgba(255, 255, 255, 0.1);
    --border-secondary: rgba(255, 255, 255, 0.05);
  }
}

/* 减少动画支持 */
@media (prefers-reduced-motion: reduce) {
  *, *::before, *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}