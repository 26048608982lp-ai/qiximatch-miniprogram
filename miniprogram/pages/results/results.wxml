<!-- 结果页面模板 -->
<view class="container {{showContent ? 'fade-in' : ''}}">
  <!-- 背景装饰 -->
  <view class="bg-decoration">
    <view class="floating-heart heart-1">💕</view>
    <view class="floating-heart heart-2">💖</view>
    <view class="floating-heart heart-3">💗</view>
    <view class="floating-heart heart-4">💓</view>
  </view>

  <!-- 主要内容 -->
  <view class="main-content">
    <!-- 头部信息 -->
    <view class="header">
      <text class="page-title">匹配结果</text>
      <text class="user-names">{{user1Name}} ❤️ {{user2Name}}</text>
    </view>

    <!-- 匹配度总览 -->
    <view class="match-overview {{showScore ? 'scale-in' : ''}}">
      <view class="score-container">
        <text class="score-label">匹配度</text>
        <text class="score-value">{{scoreAnimation}}%</text>
        <text class="match-level">{{matchResult.getMatchLevel(matchResult.overallScore)}}</text>
      </view>
      
      <!-- 分类匹配度 -->
      <view class="category-scores {{showSections ? 'slide-up' : ''}}">
        <view 
          wx:for="{{matchResult.categoryScores}}"
          wx:key="*this"
          wx:for-item="score"
          wx:for-index="category"
          class="category-score"
        >
          <text class="category-name">{{matchResult.getCategoryName(category)}}</text>
          <text class="category-value">{{score}}%</text>
          <view class="progress-bar">
            <view 
              class="progress-fill" 
              style="width: {{score}}%"
            ></view>
          </view>
        </view>
      </view>
    </view>

    <!-- 共同兴趣 -->
    <view class="section common-interests {{showSections ? 'slide-up' : ''}}" style="animation-delay: 0.2s">
      <view class="section-header">
        <text class="section-icon">⭐</text>
        <text class="section-title">共同兴趣 ({{matchResult.commonInterests.length}})</text>
      </view>
      
      <view wx:if="{{matchResult.commonInterests.length > 0}}" class="interests-grid">
        <view 
          wx:for="{{matchResult.commonInterests}}"
          wx:key="id"
          class="interest-item"
        >
          <text class="interest-icon">{{item.icon}}</text>
          <text class="interest-name">{{item.name}}</text>
          <text class="interest-importance">{{item.importance}}★</text>
        </view>
      </view>
      
      <view wx:else class="empty-state">
        <text class="empty-icon">🌟</text>
        <text class="empty-text">没有共同兴趣，但这正是了解彼此的好机会！</text>
      </view>
    </view>

    <!-- 独特兴趣 -->
    <view class="section unique-interests {{showSections ? 'slide-up' : ''}}" style="animation-delay: 0.4s">
      <view class="section-header">
        <text class="section-icon">✨</text>
        <text class="section-title">独特兴趣</text>
      </view>
      
      <view class="unique-interests-container">
        <view class="unique-column">
          <text class="unique-user-title">{{user1Name}} 的独特兴趣</text>
          <view wx:if="{{matchResult.uniqueInterests.user1.length > 0}}" class="unique-list">
            <view 
              wx:for="{{matchResult.uniqueInterests.user1}}"
              wx:key="id"
              class="unique-item"
            >
              <text class="unique-icon">{{item.icon}}</text>
              <text class="unique-name">{{item.name}}</text>
            </view>
          </view>
          <view wx:else class="empty-unique">
            <text class="empty-text">所有兴趣都是共同的</text>
          </view>
        </view>
        
        <view class="unique-column">
          <text class="unique-user-title">{{user2Name}} 的独特兴趣</text>
          <view wx:if="{{matchResult.uniqueInterests.user2.length > 0}}" class="unique-list">
            <view 
              wx:for="{{matchResult.uniqueInterests.user2}}"
              wx:key="id"
              class="unique-item"
            >
              <text class="unique-icon">{{item.icon}}</text>
              <text class="unique-name">{{item.name}}</text>
            </view>
          </view>
          <view wx:else class="empty-unique">
            <text class="empty-text">所有兴趣都是共同的</text>
          </view>
        </view>
      </view>
    </view>

    <!-- 推荐活动 -->
    <view class="section recommended-activities {{showSections ? 'slide-up' : ''}}" style="animation-delay: 0.6s">
      <view class="section-header">
        <text class="section-icon">💝</text>
        <text class="section-title">为你们推荐的约会活动</text>
      </view>
      
      <view class="activities-grid">
        <view 
          wx:for="{{matchResult.recommendedActivities}}"
          wx:key="id"
          class="activity-card"
        >
          <view class="activity-header">
            <text class="activity-name">{{item.name}}</text>
            <text class="activity-score">{{item.matchScore}}%</text>
          </view>
          
          <text class="activity-description">{{item.description}}</text>
          
          <view class="activity-footer">
            <text class="activity-duration">⏱️ {{item.duration}}</text>
            <text class="activity-cost">💰 {{item.cost}}</text>
          </view>
          
          <view class="activity-progress">
            <view 
              class="activity-progress-fill"
              style="width: {{item.matchScore}}%"
            ></view>
          </view>
        </view>
      </view>
    </view>

    <!-- 操作按钮 -->
    <view class="actions-section {{showSections ? 'slide-up' : ''}}" style="animation-delay: 0.8s">
      <button class="btn btn-primary" bindtap="copyResultsLink">
        <text class="btn-icon">📤</text>
        分享结果
      </button>
      
      <view class="secondary-actions">
        <button class="btn btn-secondary" bindtap="viewSuggestions">
          <text class="btn-icon">💡</text>
          查看建议
        </button>
        
        <button class="btn btn-secondary" bindtap="restart">
          <text class="btn-icon">🔄</text>
          重新开始
        </button>
      </view>
    </view>
  </view>
</view>