/* 星空图组件样式 */
.constellation-container {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 20rpx;
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.constellation-canvas {
  border-radius: 16rpx;
  background: rgba(0, 0, 0, 0.1);
  box-shadow: inset 0 0 20rpx rgba(0, 0, 0, 0.2);
}

/* 提示信息 */
.tips-container {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  z-index: 10;
}

.tip-card {
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(10px);
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  min-width: 200rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.tip-icon {
  font-size: 24rpx;
  line-height: 1;
}

.tip-text {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 500;
  line-height: 1.2;
}

.tip-count {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.7);
  background: rgba(255, 107, 157, 0.3);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  align-self: flex-start;
}

/* 悬停信息 */
.hover-info {
  position: absolute;
  background: rgba(0, 0, 0, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 12rpx;
  padding: 12rpx 16rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  z-index: 20;
  pointer-events: none;
  transform: translate(-50%, -120%);
}

.hover-name {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 500;
}

.hover-icon {
  font-size: 24rpx;
}

/* 动画效果 */
.constellation-container {
  animation: fadeIn 0.5s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .constellation-container {
    padding: 16rpx;
  }
  
  .tip-card {
    padding: 12rpx 16rpx;
    min-width: 160rpx;
  }
  
  .tip-text {
    font-size: 22rpx;
  }
  
  .tip-count {
    font-size: 18rpx;
  }
}

/* 画布触摸效果 */
.constellation-canvas {
  transition: all 0.3s ease;
}

.constellation-canvas:active {
  transform: scale(0.98);
}

/* 选中状态动画 */
@keyframes starSelect {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
  }
}

/* 连线动画 */
@keyframes lineDraw {
  from {
    stroke-dashoffset: 100;
  }
  to {
    stroke-dashoffset: 0;
  }
}